@page
@model StudentAccomodation.Pages.Students.WaitingListModel
@{
}
<h2>Waiting List</h2>
<p>
    <a asp-page="/Students/GetStudents">Back to List</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>  Student Number   </th>
            <th>    Name  </th>
            <th>  Registration Date  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.students)
        {
            <tr>
                <td> @item.StudentNo </td>
                <td> @item.SName </td>
                <td> @item.RegistrationDate </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-page="/Students/GetStudents">Back to List</a>
</p>